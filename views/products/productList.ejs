<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs", {title: "Reegalo - Productos"}) %>
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="/stylesheets/productList.css">
    	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
</head>

<body>

    <!-- Header del Sitio -->

    <%- include("../partials/header.ejs") %>

    <main class="principal">

        <section class="indicador">
            <a href="javascript:history.back()" class="fas fa-arrow-left"></a>
            <h2 class="detalle_producto">‏‏‎ ‎‏‏‎<%= category.description %></h2>
        </section> 

        <div class="container products-wrapper">
            <div class="row">
                
                <% products_category.find (function(item) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/productos/<%= item.id %>/detalle">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%= item.main_image %>" alt="imagen de producto">
                                </figure>
                                <article class="product-box_data">
                                    <h3>$ <%= item.price %></h3>
                                    <span><%= item.discount %> % OFF</span>
                                    <p><%= item.name %></p>
                                    <i class="fas fa-truck"></i>
                                </article>
                            </a>
                        </section>
                    </div>
                <% }) %>
            </div>
        </div>

    </main>

    <!-- Footer del Sitio -->

    <%- include("../partials/footer.ejs") %>
</body>

</html>