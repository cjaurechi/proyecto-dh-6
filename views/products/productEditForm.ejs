<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs", {title: "Reegalo - Edicion de Producto"}) %>
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="/stylesheets/productEditForm.css">
</head>

<body>

    <!-- header del Sitio -->

    <%- include("../partials/header.ejs") %>

    <section class="edicion-producto">
        <div class="container-producto">
            <p class="titulo-producto">Edicion de producto</p>
            <div class="container-logo-producto">
                <img src="/images/logo-reegalo-blue.png" alt="" class="logo-producto">
            </div>

            <form action="/productos/<%= product.id%>/editar?_method=PUT" method="POST" enctype="multipart/form-data"
                class="form-producto">
                <div class="form-linea-texto">
                    <label for="name" class="form-label">Nombre:<span class= "error"> * </span></label>
                    <div class="form-linea-texto_error">
                        <input type="text" id="name" name="name" placeholder="Ej: Nombre del producto"
                            value="<%= product.name %>" class="form-input">
                        <% if (errors.name != undefined) { %>
                            <p class="error"><%= errors.name.msg %></p>
                        <% } %>
                    </div>
                </div>

                <div class="form-linea-texto">
                    <label for="supplier" class="form-label">Proveedor:<span class= "error"> * </span></label>
                    <div class="form-linea-texto_error">
                        <select name="supplier" id="supplier" class="form-input">
                            <option value="">Elegí</option>
                            <% suppliers.find (function(item) { %>
                            <option value="<%= item.id%>" <% if (product.supplier==item.id) {%> Selected <% } %>>
                                <%= item.description%></option>
                            <% }) %>
                        </select>
                        <% if (errors.supplier != undefined) { %>
                            <p class="error"><%= errors.supplier.msg %></p>
                        <% } %>
                    </div>
                </div>

                <div class="linea-compartida">
                    <div class="form-linea-compartida-1">
                        <label for="price" class="form-label-compartido">Precio:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="number" id="price" name="price" placeholder="Ej: 5678" value="<%= product.price %>"
                                class="form-input-compartido">
                            <% if (errors.price != undefined) { %>
                                <p class="error"><%= errors.price.msg %></p>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-linea-compartida-2">
                        <label for="discount" class="form-label-compartido">Descuento:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="number" id="discount" name="discount" placeholder="Ej: 15"
                                value="<%= product.discount %>" class="form-input-compartido">
                            <% if (errors.discount != undefined) { %>
                                <p class="error"><%= errors.discount.msg %></p>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="linea-compartida">
                    <div class="form-linea-compartida-1">
                        <label for="category" class="form-label-compartido">Categoría:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <select name="category" id="category" class="form-input-compartido">
                                <option value="">Elegí</option>
                                <% categories.find (function(item) { %>
                                <option value="<%= item.id%>" <% if (product.category==item.id) {%> Selected <% } %>>
                                    <%= item.description%></option>
                                <% }) %>
                            </select>
                            <% if (errors.category != undefined) { %>
                                <p class="error"><%= errors.category.msg %></p>
                            <% } %>
                        </div>    
                    </div>
                    <div class="form-linea-compartida-2">
                        <label for="Imagen" class="form-label-compartido">Imagen:</label>
                        <input type="file" id="image" name="image" multiple="multiple" class="form-input-imagen">
                    </div>
                </div>
                <div class="imagen-producto-contenedor">
                    <% product_images.filter (function(item) { %>
                    <img src="/images/products/<%= item.image %>" alt="" class="imagen-producto">
                    <% }) %>
                </div>

                <div class="linea-compartida">
                    <div class="form-linea-compartida-1">
                        <label for="fecha_desde" class="form-label-compartido">Vigencia Desde:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="date" id="life_date_from" name="life_date_from"
                                value="<%= product.life_date_from %>" class="form-input-compartido">
                            <% if (errors.life_date_from != undefined) { %>
                                <p class="error"><%= errors.life_date_from.msg %></p>
                            <% } %>
                        </div>        
                    </div>
                    <div class="form-linea-compartida-2">
                        <label for="fecha_hasta" class="form-label-compartido">Vigencia Hasta:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="date" id="life_date_to" name="life_date_to" value="<%= product.life_date_to %>"
                                class="form-input-compartido">
                            <% if (errors.life_date_to != undefined) { %>
                                <p class="error"><%= errors.life_date_to.msg %></p>
                            <% } %>
                        </div>        
                    </div>
                </div>

                <div class="linea-compartida">
                    <div class="form-linea-compartida-1">
                        <label for="expiration_days" class="form-label-compartido">Vencimiento:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="number" id="expiration_days" name="expiration_days"
                                value="<%= product.expiration_days %>" placeholder="Ej: 365" class="form-input-compartido">
                            <% if (errors.expiration_days != undefined) { %>
                                <p class="error"><%= errors.expiration_days.msg %></p>
                            <% } %>
                        </div>    
                    </div>
                    <div class="form-linea-compartida-2">
                        <label for="share" class="form-label-compartido">Compartir:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="text" id="share" name="share" value="<%= product.share %>"
                                placeholder="Ej: Para Compartir x 2" class="form-input-compartido">
                            <% if (errors.share != undefined) { %>
                                <p class="error"><%= errors.share.msg %></p>
                            <% } %>
                        </div>        
                    </div>
                </div>

                <div class="linea-compartida">
                    <div class="form-linea-compartida-1">
                        <label for="stock" class="form-label-compartido">Disponible:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <input type="number" id="stock" name="stock" placeholder="Ej: 10" value="<%= product.stock %>"
                                class="form-input-compartido">
                            <% if (errors.stock != undefined) { %>
                                <p class="error"><%= errors.stock.msg %></p>
                            <% } %>
                        </div>        
                    </div>
                    <div class="form-linea-compartida-2">
                        <label for="estado" class="form-label-compartido">Estado:<span class= "error"> * </span></label>
                        <div class="form-linea-texto_error">
                            <select name="status" id="status" class="form-input-compartido">
                                <option value="Habilitado" <% if (product.status=="Habilitado") {%> Selected <%} %>>
                                    Habilitado</option>
                                <option value="Inhabilitado" <% if (product.status=="Inhabilitado") {%> Selected <%} %>>
                                    Inhabilitado</option>
                            </select>
                            <% if (errors.status != undefined) { %>
                                <p class="error"><%= errors.status.msg %></p>
                            <% } %>
                        </div>        
                    </div>
                </div>
                <div class="form-linea-texto">
                    <label for="description" class="form-label">Descripción:<span class= "error"> * </span></label>
                    <div class="form-linea-texto_error">
                        <textarea name="description" id="description" class="form-input"
                            placeholder="Ej: Ingrese un texto detallado del producto"><%= product.description %></textarea>
                        <% if (errors.description != undefined) { %>
                            <p class="error"><%= errors.description.msg %></p>
                        <% } %>
                    </div>            
                </div>
                <div class="boton-producto">
                    <button type="submit" class="boton-guardar">Guardar cambios</button>
                </div>
            </form>
            <form action="/productos/<%= product.id %>/borrar?_method=DELETE" method="POST" class="form-producto">
                <div class="boton-producto">
                    <button type="submit" class="boton-eliminar">Eliminar producto</button>
                </div>
            </form>

        </div>
    </section>

    <!-- Footer del Sitio -->

    <%- include("../partials/footer.ejs") %>

</body>

</html>