<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs", {title: "Reegalo - Carrito"}) %>
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="/stylesheets/productCart.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>

<body>
    <%- include("../partials/header.ejs") %>

    <div class="background">
        <div class="container">
            <div class="cart-content">
                    <table class="cart-product">
                        <tbody>
                            <thead>
                                <tr>
                                    <th>Detalle de producto</th>
                                    <th>Cantidad</th>
                                    <th>Precio</th>
                                </tr>
                            </thead>
                            <tr>
                                <td>
                                    <div class="product-details">
                                        <div class="container-imagen">
                                            <img src="/images/img-producto-1.png">
                                        </div>
                                        <div class="description">Ensalada de Instagram</div>
                                    </div>
                                </td>
                                <td>
                                    <span>2</span>
                                </td>
                                <td>
                                    <span>$1998.98</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="product-details">
                                        <div class="container-imagen">
                                            <img src="/images/img-producto-1.png">
                                        </div>
                                        <div class="description">Ensalada de Instagram</div>
                                    </div>
                                </td>
                                <td>
                                    <span>2</span>
                                </td>
                                <td>
                                    <span>$1998.98</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="product-details">
                                        <div class="container-imagen">
                                            <img src="/images/img-producto-1.png">
                                        </div>
                                        <div class="description">Ensalada de Instagram</div>
                                    </div>
                                </td>
                                <td>
                                    <span>2</span>
                                </td>
                                <td>
                                    <span>$1998.98</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
            </div>
            <div class="order-summary">
                <table class="summary">
                    <tbody>
                        <thead>
                            <tr>
                                <th>Total de la compra</th>
                            </tr>
                        </thead>
                        <tr>
                            <td>
                                <div class="total">$9999.99</div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </div>
    <div class="container-categoria">
        <section class="indicador">
            <h2 class="detalle_producto">‏‏‎ ‎‏‏‎Regalos Destacados</h2>
        </section> 

        <div class="container-productos">
                        
            <% products.forEach (function(item) { %>
                <% if (item.category_id == 1) { %>
                    <div class="container-producto">
                        <section class="product-box">
                            <a href="/productos/<%= item.id %>/detalle">
                                <figure class="product-box_image">
                                    <img src="/images/products/<%= item.product_image[0].image %>" alt="imagen de producto">
                                </figure>
                                <article class="product-box_data">
                                    <p class="product-name"><%= item.name %></p>
                                    <h3>$ <%= item.price %></h3>
                                    <span><%= item.discount %> % OFF</span>
                                    <p class="product-description"><%= item.description %></p>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <% }) %>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>

</html>