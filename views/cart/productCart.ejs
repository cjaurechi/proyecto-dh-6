<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs", {title: "Reegalo - Carrito"}) %>
    <link rel="stylesheet" href="/stylesheets/app.css">
    <link rel="stylesheet" href="/stylesheets/productCart.css">
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>

<body>
    <%- include("../partials/header.ejs") %>

    <div class="background">
        <div class="container">
            <div class="cart-content">
                <table class="cart-product">
                    <tbody>
                        <thead>
                            <tr>
                                <th>Detalle de producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th></th>
                            </tr>
                        </thead>
                        <% items.forEach(function(item) { %>
                        <tr>
                            <td>
                                <div class="product-details">
                                    <div class="container-imagen">
                                        <img src="/images/products/<%= item.products.product_image[0].image %>"
                                            style='height: 100%; width: 100%; object-fit: cover'>
                                    </div>
                                    <div class="description"><%= item.products.name %></div>
                                </div>
                            </td>
                            <td>
                                <span><%= item.quantity %></span>
                            </td>
                            <td>
                                <span>$<%= item.sale_price %></span>
                            </td>
                            <td>
                                <button>
                                    Eliminar
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="order-summary">
                <table class="summary">
                    <tbody>
                        <thead>
                            <tr>
                                <th>Total de la compra</th>
                            </tr>
                        </thead>
                        <tr>
                            <td>
                                <div class="total">$<%= total_price %></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("../partials/footer.ejs") %>
</body>

</html>